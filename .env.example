# ==================================================
# CAMPAIGNS FEATURE - ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control
# ==================================================

# ============ ENVIRONMENT ============
NODE_ENV=development
# Options: development, staging, production

PORT=3003
# Port number for the service

LOG_LEVEL=info
# Options: debug, info, warn, error

# ============ DATABASE ============
# REQUIRED in production
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lad_production
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SCHEMA=lad_prod
# CRITICAL: Use lad_prod or appropriate schema name, NOT lad_dev

# Database Pool Settings (optional)
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=30000
DB_SSL=false
# Set to 'true' for production with SSL certificates

# Alternative: Database URL (if using connection string)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ============ EXTERNAL SERVICES ============
# Apollo API (for lead generation)
APOLLO_API_KEY=your_apollo_api_key_here
# Get from Apollo.io dashboard

# AI Configuration (for content generation)
GEMINI_API_KEY=your_gemini_api_key_here
AI_MODEL=gemini-pro
MAX_TOKENS=2048

# Unipile (for LinkedIn/Social media automation)
UNIPILE_ACCESS_TOKEN=your_unipile_token_here
UNIPILE_API_URL=https://api.unipile.com

# ============ CAMPAIGN SETTINGS ============
DEFAULT_CAMPAIGN_DURATION=30
# Default campaign duration in days

MAX_DAILY_ACTIONS=100
# Maximum daily actions per campaign

# Delay Settings
MIN_DELAY_HOURS=1
# Minimum delay between actions (hours)

MAX_DELAY_DAYS=14
# Maximum delay between actions (days)

# Lead Retry Settings
LEAD_RETRY_INTERVAL_HOURS=6
# Hours to wait before retrying lead generation

# ============ SECURITY ============
# REQUIRED in production
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_here
# Generate: openssl rand -base64 32

CORS_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com
# REQUIRED in production - Comma-separated list of allowed origins
# NO localhost URLs in production!

# ============ RATE LIMITING ============
RATE_LIMIT_WINDOW=900000
# Rate limit window in milliseconds (default: 15 minutes)

RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# ============ DEVELOPMENT ONLY ============
# For local development:
# CORS_ORIGINS=http://localhost:3000

# MAX_CONCURRENT_CAMPAIGNS=5
# CAMPAIGN_CHECK_INTERVAL_MS=60000

# Feature Flags
# ENABLE_AUTO_RETRY=true
# ENABLE_LEAD_CACHING=true
